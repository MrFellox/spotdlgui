#: import utils kivy.utils

# Set defaults to label
<Label>:
    color: '#FFFFFF'
    font_size: 64

<Button>:
    background_color: utils.get_color_from_hex('#1DB954')
    color: utils.get_color_from_hex('#FFFFFF')
    background_normal: ''

<DownloadingPopup@Popup>:
    auto_dismiss: False
    title: ''
    size_hint: 0.5, 0.5
    separator_color: utils.get_color_from_hex('#1DB954')
    title_size: 34
    title_font: 'Gotham'

    GridLayout:
        size: self.width, self.height
        
        cols: 1

        Label:
            id: popup_label
            color: utils.get_color_from_hex('#FFFFFF')
            text: ''
            font_size: 32
            pos_hint: {'center_x': 1, 'center_y': 1}
BoxLayout:
    size: root.width, root.height
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#000000')

        Rectangle:
            pos: self.pos
            size: self.size

    
    # Main Content

    FloatLayout:
        size: root.width, root.height

        Label:
            id: label_title
            font_name: "Gotham"
            text: 'SpotDLGUI'
            font_size: root.width / 36
            pos_hint: {"center_x": 0.09, "center_y": 0.94}

        Label:
            id: instruction_label
            font_name: "Gotham"
            text: 'Enter your song URL or song name'
            font_size: "20dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
        
        TextInput:
            id: url_entry
            size_hint: 0.4, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Button:
            id: download_button
            text: "Download Song"
            font_name: "Gotham"
            font_size: root.width / 44
            on_release: app._on_download_press()
            size_hint: (0.3, 0.12)
            pos_hint: {"center_x": 0.5, "center_y": 0.26}
